apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-from-openshift-ingress
spec:
  ingress:
  - from:
    - namespaceSelector:
        matchLabels:
          network.openshift.io/policy-group: {{ new_project_networkpolicy.ingresslabel }}
  podSelector: {}
  policyTypes:
  - Ingress
